# BATAVIA
fping -q batavia && ( \
        test -d /sav/batavia || mkdir -p /sav/batavia; \
        echo -n "rsync batavia: /var"; \
        $RSYNC $RSYNC_OPTS root@batavia:/var/ /sav/batavia/var/; \
        echo -n ". /usr"; \
        $RSYNC $RSYNC_OPTS --exclude obj --exclude src --exclude ports --delete-excluded root@batavia:/usr/ /sav/batavia/usr/; \
        echo -n ". /data"; \
        $RSYNC $RSYNC_OPTS root@batavia:/data/ /sav/batavia/data/; \
        echo -n ". /"; \
        $RSYNC $RSYNC_OPTS --exclude /var --exclude /usr root@batavia:/ /sav/batavia/; \
        touch /sav/batavia; \
        echo ". done."; \
) || echo "batavia down ???" >&2

