# BIOWEB
fping -q bioweb.biomeca.org && ( \
        test -d /sav/bioweb || mkdir -p /sav/bioweb; \
        echo -n "rsync bioweb: /var"; \
        $RSYNC $RSYNC_OPTS bioweb.biomeca.org:/var/ /sav/bioweb/var/; \
        echo -n ". /usr"; \
        $RSYNC $RSYNC_OPTS bioweb.biomeca.org:/usr/ /sav/bioweb/usr/; \
        echo -n ". /"; \
        $RSYNC $RSYNC_OPTS --exclude /var --exclude /usr bioweb.biomeca.org:/ /sav/bioweb/; \
        touch /sav/bioweb; \
        echo ". done."; \
) || echo "bioweb down ???" >&2

